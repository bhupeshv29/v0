// schema.prisma example
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  image     String?
  clerkId   String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
